/* form */


.label-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 580rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
  border: 1rpx solid #b2b2b2;
}
.label-content input {
  height: 100rpx;
  padding-left: 16rpx;
}

.label-content .code {
  width: 320rpx;
}
.label-content .get-code {
  width: 260rpx;
  border-left: 1rpx solid #b2b2b2;
  text-align: center;
  font-size: 26rpx;
  color: #353535;
}

.btn {
 width: 580rpx;
 height: 100rpx; 
 line-height: 100rpx;
 background: #b2b2b2;
 margin-top: 82rpx;
 border: none;
 border-radius: 10rpx;
 font-size: 36rpx;
 color: #fbfbfb;
}
.active {
  background: #353535;
  color: #fbfbfb;
}

