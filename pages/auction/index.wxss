}

.video {
  width: 750rpx;
}

/* btn */

.btn {
  /* position: absolute;
  z-index: 100;
  bottom: 28rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 32rpx;
}

.cover-btn {
  width: 100rpx;
}


.video {
  display: flex;
  align-items: center;
  justify-content: center;
}
.san {
  width: 0;
  height: 0;
  margin-right: 10rpx;
  border-top: 10rpx solid transparent;
  border-left: 20rpx solid #000;
  border-bottom: 10rpx solid transparent;
}

.btn > view,
.btn .cover-btn {
  width: 86rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(255, 255, 255, 0.6);
  margin: 0 16rpx;
  border: 1rpx solid #999;
  border-radius: 18rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 22rpx;
  color: #1c1c1c;
}

.btn .active {
  background: #d9a62e;
  border: none;
  color: #fff;
}
.btn .active .san { 
  border-left: 20rpx solid #fff;
}

.content {
  background: #f2f2f2;
  height: 100%;
  padding-bottom: 100rpx;
  font-size: 30rpx;
}
.title,
.name {
  font-size: 32rpx;
}
/* 拍品信息 */

.info {
  background: #fff;
  margin-bottom: 32rpx;
  padding: 32rpx;
  font-size: 32rpx;
  color: #1c1c1c;
}

.info .name {
  font-weight: bolder;
}
.info .price {
  color: #d9a52c;
  font-size: 46rpx;
}
.info .flex-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 10rpx;
  font-size: 26rpx;
}
.info .font {
  font-size: 24rpx;
  color: #9b9b9b;
}
.info .flex-item view {
  flex: 1;
}

/* 拍品介绍 */

.desc {
  background: #fff;
  margin-bottom: 32rpx;
  padding: 32rpx;
  font-size: 26rpx;
}

.desc .title {
  font-weight: bold;
}

/* 拍卖记录 */

.record {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 0 32rpx;
}

.record .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 16rpx;
}

.record .head-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.scroll-header {
  display: flex;
  white-space: nowrap;
}

.scroll-header .record-item {
  width: 128rpx;
  height: 200rpx;
  display: inline-block;
  margin-right: 16rpx;
  font-size: 24rpx;
  text-align: center;
}

.record-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}



/* 弹出层 */

.model {
  position: fixed;
  z-index: 500;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  font-size: 24rpx;
}

.model-box {
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 700rpx;
  height: 500rpx;
  background: #fff;
  margin: -250rpx 0 0 -350rpx;
  padding: 0 32rpx;
}

.now-price {
  padding: 16rpx 0;
}

.close {
  position: absolute;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.set {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.set .text {
  width: 100rpx;
}

.num-box {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 60rpx;
  border: 10px solid 1c1c1c;
}

.fixed-box {
  width: 252rpx;
  border: 1rpx solid #1c1c1c;
}

.num-box text {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border: 1rpx solid #000;
  border-radius: 0;
  text-align: center;
  font-size: 24rpx;
}

.num-box .price {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-top: 1rpx solid #1c1c1c;
  border-bottom: 1rpx solid #1c1c1c;
  padding: 0 32rpx;
  text-align: center;
}

.offer {
  width: 120rpx;
  height: 60rpx;
  background: #000;
  border-radius: 0;
  color: #fff;
  font-size: 24rpx;
}

.intr {
  margin-bottom: 32rpx;
  color: #757575;
  font-size: 22rpx;
}

/* 滚动 */

.scroll {
  display: flex;
}

.scroll-view-item {
  width: 300rpx;
}

